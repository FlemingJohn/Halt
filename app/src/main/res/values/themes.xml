<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Halt" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/slate_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorContainer">@color/slate_100</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/slate_900</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="Theme.Halt.Block" parent="Theme.Halt">
        <item name="android:windowBackground">@color/slate_900</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Add this new style for your fullscreen activity -->
    <style name="Theme.Halt.Fullscreen" parent="Theme.Halt">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
